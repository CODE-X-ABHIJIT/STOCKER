@using System.Globalization
@model STOCKER.Models.Products

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>
<hr />

<h4>Are you sure you want to delete this product?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Selling Price</dt>
        <dd class="col-sm-9">@Model.Price.ToString("C", CultureInfo.GetCultureInfo("en-IN"))</dd>

        <dt class="col-sm-3">Buying Price</dt>
        <dd class="col-sm-9">@Model.BuyingPrice.ToString("C", CultureInfo.GetCultureInfo("en-IN"))</dd>

        <dt class="col-sm-3">Stock</dt>
        <dd class="col-sm-9">@Model.Inventory?.QuantityInStock</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
