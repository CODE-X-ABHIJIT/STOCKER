<form asp-action="AddStock" method="post">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />

    <div class="form-group mb-3">
        <label for="additionalStock">Add Stock</label>
        <input type="number" name="additionalStock" class="form-control" min="0" required />
        <small>Current stock: @Model.Inventory?.QuantityInStock</small>
    </div>

    <div class="form-group mb-3">
        <label for="newBuyingPrice">New Buying Price (Per Unit)</label>
        <input type="number" name="newBuyingPrice" class="form-control" min="0" step="0.01" required />
        <small>Current buying price: ₹@Model.BuyingPrice.ToString("0.00")</small>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
